<?xml version="1.0" encoding="utf-8"?>
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tableLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

		<TableRow
        	    android:id="@+id/tablseRow"
           		android:layout_width="fill_parent"
            	android:layout_height="wrap_content" >
            
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text=" "
		        />
		</TableRow>
		<TableRow
            android:id="@+id/tableRow"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/distance"
                android:layout_span="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40px"

                android:text=" "
                android:background="@drawable/back" />
		</TableRow>
		<TableRow
        	    android:id="@+id/tsableRow"
           		android:layout_width="fill_parent"
            	android:layout_height="wrap_content" >
            
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text=" "
		        />
		</TableRow>
        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/feet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            	android:textSize="40dip"
                android:text="Feet" />

            <Button
                android:id="@+id/one"
                android:textSize="40dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   1   " />

            <Button
                android:textSize="40dip"
                android:id="@+id/two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   2   " />

            <Button
                android:id="@+id/three"
                android:textSize="40dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   3   " />

            <Button
                android:id="@+id/onequarter"
                android:textSize="40dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  1/4  " />

        </TableRow>
        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/inches"
                android:textSize="40dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inches" />

            <Button
                android:id="@+id/four"
                android:textSize="40dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   4   " />

            <Button
                android:id="@+id/five"
                android:textSize="40dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   5   " />

            <Button
                android:id="@+id/six"
                android:textSize="40dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   6   " />

            <Button
                android:id="@+id/half"
                android:textSize="40dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  1/2  " />

        </TableRow>
        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/delete"
                android:textSize="40dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Backspace" />

            <Button
                android:id="@+id/seven"
                android:textSize="40dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   7   " />

            <Button
                android:id="@+id/eight"
                android:textSize="40dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   8   " />

            <Button
                android:id="@+id/nine"
                android:textSize="40dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   9   " />

            <Button
                android:id="@+id/threequarters"
                android:textSize="40dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  3/4  " />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/clear"
                android:textSize="40dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clear" />

			<Button
                android:id="@+id/zero"
                android:textSize="40dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   0   " />
			
            <Button
                android:id="@+id/period"
                android:textSize="40dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   .   " />

            <Button
                android:id="@+id/nm"
                android:textSize="40dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  NM   " />

            <TextView
                android:id="@+id/textView1"
                android:textSize="40dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="       " />

        </TableRow>

<TableRow
            android:id="@+id/tableRow3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/imabutton"
                android:textSize="40dip"
                
                android:paddingTop="10px"
                android:paddingBottom="10px"
                android:paddingLeft="10px"
                android:paddingRight="10px"
               
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_span="5"
                android:text="Submit" />

</TableRow>

    </TableLayout>
